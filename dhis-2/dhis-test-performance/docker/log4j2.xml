<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="10">
    <!-- Stream logs:
            docker compose logs -f web
         Stream logs of a particuar package only:
            docker compose logs -f web | grep org.hisp.dhis.monitoring.metrics
         Show timestamps:
            docker compose logs -t -f web

         Log file is written to /opt/dhis2/logs/dhis.log (mounted to ./logs/dhis.log on host)
    -->
    <Properties>
        <Property name="layout">%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} %-5level %c [%t] request_id=%X{xRequestID} %msg%n</Property>
    </Properties>

    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="${layout}" />
        </Console>
        <File name="file" fileName="/opt/dhis2/logs/dhis.log" append="false">
            <PatternLayout pattern="${layout}" />
        </File>
    </Appenders>

    <Loggers>
        <!-- Silence authentication success events (noisy during performance tests) -->
        <Logger name="org.hisp.dhis.security.AuthenticationLoggerListener" level="WARN" additivity="false">
            <AppenderRef ref="console"/>
        </Logger>
        <!-- Silence audit logging (noisy during performance tests)
             Alternative: disable in dhis.conf with audit.logger=off -->
        <Logger name="org.hisp.dhis.audit.AbstractAuditConsumer" level="WARN" additivity="false">
            <AppenderRef ref="console"/>
        </Logger>
        <Logger name="org.hisp.dhis" level="INFO" additivity="true"/>

        <!-- Connection acquisition timing - enable for connection pool analysis -->
        <Logger name="org.hisp.dhis.datasource.ConnectionLoggingDataSource" level="DEBUG" additivity="true"/>

        <!-- Enhanced transaction/connection logging to prove HTTP thread holds connection for full duration -->
        <!-- Spring transaction interceptor - shows transaction start/commit/rollback -->
        <Logger name="org.springframework.transaction.interceptor.TransactionInterceptor" level="TRACE" additivity="true"/>
        <!-- Spring JPA transaction manager - shows connection acquisition/release timing -->
        <Logger name="org.springframework.orm.jpa.JpaTransactionManager" level="DEBUG" additivity="true"/>
        <!-- Spring JDBC DataSourceUtils - shows connection binding/unbinding to thread -->
        <Logger name="org.springframework.jdbc.datasource.DataSourceUtils" level="DEBUG" additivity="true"/>
        <!-- Hibernate connection management -->
        <Logger name="org.hibernate.resource.jdbc.internal.LogicalConnectionManagedImpl" level="DEBUG" additivity="true"/>
        <!-- Hibernate transaction coordinator -->
        <Logger name="org.hibernate.resource.transaction" level="DEBUG" additivity="true"/>

        <Root level="WARN">
            <AppenderRef ref="console"/>
            <AppenderRef ref="file"/>
        </Root>
    </Loggers>
</Configuration>
