<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
    "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
    "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
  <module name="TreeWalker">
    <!-- Ensures each source file has a top-level class matching the filename.
         Without this, Maven's incremental compilation breaks because it expects
         Foo.class when compiling Foo.java. The compiler enforces this for public
         classes; this check catches package-private classes. -->
    <module name="OuterTypeFilename"/>
  </module>
</module>
