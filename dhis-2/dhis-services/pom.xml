<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.hisp.dhis</groupId>
    <artifactId>dhis</artifactId>
    <version>2.37-SNAPSHOT</version>
  </parent>

  <artifactId>dhis-services</artifactId>
  <packaging>pom</packaging>
  <name>DHIS Services Parent Project</name>

  <!-- 
    Service modules are grouped in levels, where a module in a level can only
    depend on modules on a lower level. Note: New services should be added
    as high up in the list as possible (at the lowest level).
    
    The purpose is to avoid circular dependencies and have a clean dependency 
    graph. The modules are built in in ascending order according to the level.
  -->

  <modules>
    <!-- Level 1 -->
    <module>dhis-service-schema</module>
    <module>dhis-service-setting</module>
    <!-- Level 2 -->
    <module>dhis-service-acl</module>
    <module>dhis-service-audit-consumer</module>
    <!-- Level 4 -->
    <module>dhis-service-node</module>
    <!-- Level 5 -->
    <module>dhis-service-core</module>
    <!-- Level 6 -->
    <module>dhis-service-validation</module>
    <module>dhis-service-program-rule</module>
    <!-- Level 7 -->
    <module>dhis-service-administration</module>
    <module>dhis-service-dxf2</module>
    <!-- Level 8 -->
    <module>dhis-service-analytics</module>
    <module>dhis-service-tracker</module>
    <!-- Level 9 -->
    <module>dhis-service-reporting</module>
  </modules>

  <dependencies>

    <!-- DHIS -->

    <dependency>
      <groupId>org.hisp.dhis</groupId>
      <artifactId>dhis-api</artifactId>
    </dependency>
    <dependency>
      <groupId>org.hisp.dhis</groupId>
      <artifactId>dhis-support-test</artifactId>
    </dependency>
  </dependencies>
  <properties>
    <rootDir>../</rootDir>
  </properties>
</project>
