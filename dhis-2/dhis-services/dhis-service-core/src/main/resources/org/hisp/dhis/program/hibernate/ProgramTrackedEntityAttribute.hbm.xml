<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"
  [<!ENTITY identifiableProperties SYSTEM "classpath://org/hisp/dhis/common/identifiableProperties.hbm">]
  >

<hibernate-mapping>
  <class name="org.hisp.dhis.program.ProgramTrackedEntityAttribute" table="program_attributes">

    <id name="id" column="programtrackedentityattributeid">
      <generator class="native" />
    </id>
    &identifiableProperties;

    <many-to-one name="program" class="org.hisp.dhis.program.Program"
      column="programid" foreign-key="fk_programtrackedentityattribute_programid" unique-key="programtrackedentityattribute_unique_key" />

    <many-to-one name="attribute" class="org.hisp.dhis.trackedentity.TrackedEntityAttribute"
      column="trackedentityattributeid" foreign-key="fk_program_attributeid" unique-key="programtrackedentityattribute_unique_key" />

    <property name="displayInList" column="displayinlist" />

    <property name="mandatory" column="mandatory" />
    
    <property name="sortOrder" column="sort_order" />

    <property name="allowFutureDate" column="allowFutureDate" />
    
    <property name="renderOptionsAsRadio" column="renderoptionsasradio" />

    <set name="groups" table="programtrackedentityattributegroupmembers" >
      <cache usage="read-write" />
      <key column="programtrackedentityattributeid" foreign-key="fk_programtrackedentityattributegroupmembers_attributeid" />
      <many-to-many class="org.hisp.dhis.program.ProgramTrackedEntityAttributeGroup"  column="programtrackedentityattributegroupid"   foreign-key="fk_programtrackedentityattributegroupmembers_groupid" />
    </set>

  </class>

</hibernate-mapping>
