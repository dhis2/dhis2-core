<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"
        [<!ENTITY identifiableProperties SYSTEM "classpath://org/hisp/dhis/common/identifiableProperties.hbm">]
        >

<hibernate-mapping>
    <class name="org.hisp.dhis.trackerdataview.TrackerDataView" table="trackerdataview">
        <id name="id" column="trackerdataviewid">
            <generator class="native" />
        </id>
        &identifiableProperties;

        <many-to-one name="trackedEntityType" class="org.hisp.dhis.trackedentity.TrackedEntityType"
                     column="trackedentitytypeid"
                     foreign-key="fk_trackerdataview_trackedentitytypeid" />

        <many-to-one name="program" class="org.hisp.dhis.program.Program"
                     column="programid"
                     foreign-key="fk_trackerdataview_programid" />

        <many-to-one name="programStage" class="org.hisp.dhis.program.ProgramStage"
                     column="programstageid"
                     foreign-key="fk_trackerdataview_programstageid" />

        <set name="trackerDataViewItems" table="trackerdataviewitem" cascade="all-delete-orphan">
            <cache usage="read-write" />
            <key column="trackerdataviewid" foreign-key="fk_trackerdataviewitem_dataviewid" />
            <one-to-many class="org.hisp.dhis.trackerdataview.TrackerDataViewItem" />
        </set>

    </class>

</hibernate-mapping>