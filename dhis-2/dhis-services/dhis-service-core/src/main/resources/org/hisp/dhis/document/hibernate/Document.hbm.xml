<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"
  [ <!ENTITY  identifiableProperties SYSTEM "classpath://org/hisp/dhis/common/identifiableProperties.hbm"> 
 <!ENTITY  tablename "document">] 
  >

<hibernate-mapping>
  <class name="org.hisp.dhis.document.Document" table="&tablename;">

    <cache usage="read-write" />

    <id name="id" column="documentid">
      <generator class="native" />
    </id>
    &identifiableProperties;

    <property name="name" column="name" not-null="true" unique="false" length="230" />

    <property name="url" not-null="true" type="text" />

    <many-to-one name="fileResource" class="org.hisp.dhis.fileresource.FileResource" column="fileresource" foreign-key="fk_document_fileresourceid" />

    <property name="external" not-null="true" />

    <property name="contentType" />

    <property name="attachment" />

    <property name="translations" type="jblTranslations"/>

    <!-- Dynamic attribute values -->
    <set name="attributeValues" table="documentattributevalues" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="documentid" />
      <many-to-many class="org.hisp.dhis.attribute.AttributeValue" column="attributevalueid" unique="true" />
    </set>

    <!-- Access properties -->
    <property name="externalAccess" />

    <many-to-one name="user" class="org.hisp.dhis.user.User" column="userid" foreign-key="fk_document_userid" />

    <property name="publicAccess" length="8" />

  <set name="userGroupAccesses" table="documentusergroupaccesses" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="documentid" foreign-key="fk_document_usergroupaccessid" />
      <many-to-many class="org.hisp.dhis.user.UserGroupAccess" foreign-key="fk_usergroupaccess_document">
            <column name="usergroupaccessid" unique-key="uk_document_usergroupaccessid"/>
 </many-to-many>
    </set>

  <set name="userAccesses" table="documentuseraccesses" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="documentid" foreign-key="fk_document_useraccessid" />
      <many-to-many class="org.hisp.dhis.user.UserAccess" foreign-key="fk_useraccess_document">
            <column name="useraccessid" unique-key="uk_document_useraccessid"/>
 </many-to-many>
    </set>

  </class>

</hibernate-mapping>
