<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"
        [<!ENTITY identifiableProperties SYSTEM "classpath://org/hisp/dhis/common/identifiableProperties.hbm">]
        >

<hibernate-mapping>
    <class name="org.hisp.dhis.program.notification.ProgramNotificationInstance" table="programnotificationinstance">

        <id name="id" column="programnotificationinstanceid">
            <generator class="native" />
        </id>
        &identifiableProperties;

        <property name="name" column="name" not-null="true" unique="false" length="230" />

        <many-to-one name="programInstance" class="org.hisp.dhis.program.ProgramInstance"
                     column="programinstanceid" foreign-key="fk_programstagenotification_pi" not-null="false" />

        <many-to-one name="programStageInstance" class="org.hisp.dhis.program.ProgramStageInstance"
                     column="programstageinstanceid" foreign-key="fk_programstagenotification_psi" not-null="false" />

        <many-to-one name="programNotificationTemplate" class="org.hisp.dhis.program.notification.ProgramNotificationTemplate"
                     column="programnotificationtemplateid" foreign-key="fk_programstagenotification_pnt" not-null="true" />

        <property name="scheduledAt" column="scheduledat" type="timestamp" not-null="false" />

        <property name="sentAt" column="sentAt" type="timestamp" not-null="false" />

    </class>
</hibernate-mapping>
