<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

  <bean id="org.hisp.dhis.approval.dataapproval.action.GetDataApprovalOptionsAction" 
    class="org.hisp.dhis.approval.dataapproval.action.GetDataApprovalOptionsAction" scope="prototype">
  </bean>
  
  <bean id="org.hisp.dhis.approval.dataset.action.GenerateDataSetReportAction" class="org.hisp.dhis.approval.dataset.action.GenerateDataSetReportAction"
    scope="prototype">
    <property name="dataSetReportService" ref="org.hisp.dhis.datasetreport.DataSetReportService" />
    <property name="dataSetService" ref="org.hisp.dhis.dataset.DataSetService" />
    <property name="registrationService" ref="org.hisp.dhis.dataset.CompleteDataSetRegistrationService" />
    <property name="organisationUnitService" ref="org.hisp.dhis.organisationunit.OrganisationUnitService" />
    <property name="periodService" ref="org.hisp.dhis.period.PeriodService" />
    <property name="categoryService" ref="org.hisp.dhis.category.CategoryService" />
  </bean>
  
  <!-- Approval Validation -->
  <bean id="org.hisp.dhis.approval.dataapproval.action.GetApprovalValidationRuleAction" class="org.hisp.dhis.approval.dataapproval.action.GetApprovalValidationRuleAction" scope="prototype">
    <property name="dataSetService" ref="org.hisp.dhis.dataset.DataSetService" />
    <property name="organisationUnitService" ref="org.hisp.dhis.organisationunit.OrganisationUnitService" />
    <property name="periodService" ref="org.hisp.dhis.period.PeriodService" />
    <property name="categoryService" ref="org.hisp.dhis.category.CategoryService" />
    <property name="approvalValidationRuleService" ref="org.hisp.dhis.approvalvalidationrule.ApprovalValidationRuleService" />
    <property name="approvalValidationService" ref="org.hisp.dhis.approvalvalidationrule.ApprovalValidationService" />
  </bean>
  
  <bean id="org.hisp.dhis.approval.dataapproval.action.AddApprovalValidationAction" class="org.hisp.dhis.approval.dataapproval.action.AddApprovalValidationAction" scope="prototype">
    <property name="currentUserService" ref="org.hisp.dhis.user.CurrentUserService" />
    <property name="dataSetService" ref="org.hisp.dhis.dataset.DataSetService" />
    <property name="organisationUnitService" ref="org.hisp.dhis.organisationunit.OrganisationUnitService" />
    <property name="periodService" ref="org.hisp.dhis.period.PeriodService" />
    <property name="categoryService" ref="org.hisp.dhis.category.CategoryService" />
    <property name="approvalValidationRuleService" ref="org.hisp.dhis.approvalvalidationrule.ApprovalValidationRuleService" />
    <property name="approvalValidationService" ref="org.hisp.dhis.approvalvalidationrule.ApprovalValidationService" />
  </bean>
  
</beans>
