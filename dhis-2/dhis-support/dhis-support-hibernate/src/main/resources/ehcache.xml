<?xml version="1.0" encoding="UTF-8"?>
<config xmlns="http://www.ehcache.org/v3"
        xmlns:jsr107="http://www.ehcache.org/v3/jsr107">

  <service>
    <jsr107:defaults enable-statistics="true" enable-management="true"/>
  </service>

  <cache alias="defaultCache">
    <key-type>java.lang.Object</key-type>
    <value-type>java.lang.Object</value-type>
    <expiry>
      <ttl unit="seconds">21600</ttl>
    </expiry>
    <resources>
      <heap>1000000</heap>
    </resources>
  </cache>

  <cache alias="default-query-results-region">
    <key-type>java.lang.Object</key-type>
    <value-type>java.lang.Object</value-type>
    <expiry>
      <ttl unit="seconds">21600</ttl>
    </expiry>
    <resources>
      <!-- if you get a deprecation warning about heap, check this link; https://stackoverflow.com/a/74098583 -->
      <heap>1000000</heap>
    </resources>
  </cache>

  <cache alias="default-update-timestamps-region">
    <key-type>java.lang.Object</key-type>
    <value-type>java.lang.Object</value-type>
    <resources>
      <heap>5000</heap>
    </resources>
  </cache>
</config>